@import '../../assistant/font/iconfont.wxss';

Page {
  font-family: "苹方";
  background: #fbfbfb;
}

.title {
  width: 100%;
  height: 80rpx;
  text-align: center;
  background: white;
  line-height: 80rpx;
}

.right1 {
  font-size: 28rpx;
  border: 4rpx solid #81a6d3;
  height: 70rpx;
  width: 180rpx;
  margin-right: 20rpx;
  border-radius: 48rpx;
  position: absolute;
  right: 0rpx;
  bottom: 29rpx;
}

.right1 .self {
  background: #81a6d3;
  color: white;
  height: 65rpx;
  display: flex;
  width: 90rpx;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  margin: 5rpx;
}

.right1 .out {
  color: #81a6d3;
  display: flex;
  width: 90rpx;
  justify-content: center;
}

.bg1 {
  background: white;
  margin-top: 20rpx;
  padding: 30rpx;
  position: relative;
  margin-bottom: 10rpx;
}

.shop_self {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.shopaddress {
  color: #666;
  font-size: 24rpx;
  width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 10rpx;
}

.seconded {
  padding: 30rpx;
  background: white;
  margin-top: 8rpx;
  position: relative;
}

.chongsheng {
  font-size: 30rpx;
  font-weight: bold;
}

.kougan {
  font-size: 24rpx;
  color: #666;
}

.num {
  margin-left: 250rpx;
  font-size: 28rpx;
  color: #666;
}

.price {
  position: absolute;
  right: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.total {
  border-top: 1px solid #f6f5f5;
}

.totalAll {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.third {
  background: white;
  padding: 30rpx;
  margin: 20rpx 0;
  height: 220rpx;
}

.third image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx 0 0 10rpx;
  vertical-align: middle;
}

.third .item {
  width: 580rpx;
  border: 1px solid #e9e9e9;
  border-radius: 10rpx;
}

.match {
  color: #444443;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 26rpx;
}

.m_left {
  margin-left: 20rpx;
}

.shouji {
  margin-top: 20rpx;
  font-size: 28rpx;
  position: relative;
}

.new {
  color: #f85c38;
}

.old {
  margin-left: 20rpx;
  color: #a0a09f;
  text-decoration: line-through;
}

.add {
  background: #81a6d3;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  line-height: 38rpx;
  text-align: center;
  color: white;
  position: absolute;
  right: 20rpx;
  bottom: 0;
}

.coffee_box {
  padding: 30rpx;
  background: #fff;
}

.usecoffee {
  border: 1px solid #fad9b8;
  background: #fff2df;
  padding: 30rpx 40rpx;
  position: relative;
  border-radius: 10rpx;
}

.two_one, .six {
  color: #e07117;
  font-weight: bold;
}

.arrow {
  font-weight: bold;
  color: #e3771e;
  font-size: 36rpx;
  position: absolute;
  right: 10rpx;
}

.coupon {
  padding: 30rpx;
  background: #fff;
}

.use_coupon, .two_eight {
  font-size: 30rpx;
}

.two_eight {
  color: #e58130;
  font-size: 28rpx;
}

.arrow1 {
  color: #d3d3d3;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.line {
  border-bottom: 1px solid #efeeee;
  margin-left: 30rpx;
}

.saty, .daizou, .wpay,.special{
  font-size: 28rpx;
}

.helpyouself {
  background: #fff;
  margin-top: 10rpx;
  padding: 30rpx;
}

.group1 {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}

.saty, .daizou, .wpay {
  margin-left: 20rpx;
}
.daizou{
  margin-right: 20rpx;
}
.special{
  background: #fff;
  padding: 30rpx;
}
.argee{
  font-size: 26rpx;
  margin-left: 18rpx;
}
.xieyi{
  padding: 30rpx;
  height: 230rpx;
}
.tips{
  font-size: 22rpx;
  margin-top: 20rpx;
  color: #A6A5A5;
} 
.footer {
  height: 100rpx;
  background: #fff;
  width: 100vw;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0 -5rpx 10rpx #eee;
}
.footer view,.footer {
  font-size: 28rpx;
}

.addCart{
  background: #81a6d3;
  color: white;
  height: 100%;
  /* width: 250rpx; */
  width: 33.3%;
}
.gopay{
  padding-left: 30rpx;
}
.gopay .need{
  font-size: 28rpx;
}
.gopay .shiji{
  font-weight: bold;
  margin-left: 10rpx;
  font-size: 36rpx;
}
.gopay .dikou{
  color: #C6681B;
  font-size: 24rpx;
}
