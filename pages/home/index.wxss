/* 弹层 */

.shadow {
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  height: 100vh;
  width: 100vw;
}

.tanceng {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  left: 30vw;
  top: 30vh;
}

.close {
  position: absolute;
  top: 20vh;
  right: 15vw;
  color: #ccc;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  font-size: 22rpx;
  line-height: 100rpx;
}
