.item {
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
  height: 120rpx;
  padding: 0rpx 30rpx;
}

.title {
  font-size: 28rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.fixed {
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: 999;
}

.img {
  width: 300rpx;
  height: 500rpx;
}

/* renew */


.box {
  background-color: white;
  padding: 30rpx;
  margin: 20rpx;
  border-bottom: 1px solid #fafafa;
}

.ziti {
  padding: 6rpx;
  border: 1rpx solid #81a6d3;
  color: #81a6d3;
  font-size: 24rpx;
  border-radius: 5rpx;
}

.shopname {
  font-size: 30rpx;
  padding: 0 20rpx;
}

.state {
  font-size: 28rpx;
  color: #666;
}

.goods {
  margin-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.goodsname {
  margin-right: 30rpx;
}

.items {
  font-size: 28rpx;
  padding: 20rpx 0;
}

.price1 {
  font-weight: bold;
  font-size: 28rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.again {
  border: 1px solid #999;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #666;
  width: 100rpx;
  text-align: center;
}
